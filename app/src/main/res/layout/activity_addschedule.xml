<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212c4d"
    tools:context=".Addschedule">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="243dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/save_button"
        app:layout_constraintEnd_toEndOf="@+id/venue_edit_text"
        app:layout_constraintStart_toStartOf="@+id/venue_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/venue_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="สถานที่"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textColorLink="#212c4d"
        app:layout_constraintBottom_toTopOf="@+id/Date_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_edit_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/Date_edit_text"
        android:layout_width="202dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/save_button"
        app:layout_constraintEnd_toEndOf="@+id/venue_edit_text"
        app:layout_constraintStart_toEndOf="@+id/Date_textView"
        app:layout_constraintTop_toBottomOf="@+id/venue_edit_text" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button"
        android:text="บันทึก"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Date_edit_text" />

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:hint="กิจกรรม"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="#212c4d"
        app:layout_constraintBottom_toTopOf="@+id/venue_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/Date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="วันที่"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/Date_edit_text"
        app:layout_constraintStart_toStartOf="@+id/venue_edit_text"
        app:layout_constraintTop_toTopOf="@+id/Date_edit_text"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>